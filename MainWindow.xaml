<Window x:Class="VoiceCalculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Voice Calculator" 
    ResizeMode="NoResize"
    Background="#fdfdfd"
    WindowStartupLocation="CenterScreen"
    Height="170" Width="350">

    <Grid>
        <Grid Grid.Row="0" 
            Margin="0,10,0,0"  
            HorizontalAlignment="Center" 
            VerticalAlignment="Top">
            <Border
                VerticalAlignment="Center"
                BorderThickness="1" 
                BorderBrush="LightGray" 
                Background="#eeeeee"
                Height="57"    
                Width="210">
                <TextBox
                    x:Name="Words"
                    Background="Transparent" 
                    Cursor="Arrow"
                    IsReadOnly="True"
                    Padding="5, 5, 5, 5"
                    FontSize="14" 
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    PreviewMouseLeftButtonDown="TextBox_MouseDown"
                    VerticalScrollBarVisibility="Auto"
                    Text="That quick beige fox jumped in the air over each thin dog"/>
            </Border>
        </Grid>
        <Grid Grid.Row="1" 
            Margin="0,0,0,15"  
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom">
            <Border
                VerticalAlignment="Center"
                BorderThickness="1" 
                BorderBrush="LightGray" 
                Padding="5,0,5,0"
                Height="25"    
                Width="Auto">
                <TextBlock 
                    x:Name="Info"
                    Padding="1"
                    FontSize="14" 
                    Text="Click on any word and pronounce it"
                    TextAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>
